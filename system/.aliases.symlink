#!/bin/bash

# Get operating system
platform='unknown'
unamestr=$(uname)
if [[ $unamestr == 'Linux' ]]; then
    platform='linux'
elif [[ $unamestr == 'Darwin' ]]; then
    platform='darwin'
fi

# Show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'

# FS operations
if [[ $platform == 'linux' ]]; then
  alias ll='ls -alh --color=auto'
  alias ls='ls --color=auto'
elif [[ $platform == 'darwin' ]]; then
  alias ll='ls -alGh'
  alias ls='ls -Gh'
fi

# mimic vim functions
alias :q='exit'

# Easier navigation
alias ..="cd .."
alias ...="cd ..."
alias ~="cd ~"

# PS
alias psa="ps aux"
alias psg="ps aux | grep "

# Git aliases
alias g="git"
alias ga="git a"
alias gap="git ap"
alias gb="git b"
alias gc="git c"
alias gcam="git cam"
alias gco="git co"
alias gcb="git cb"
alias gd="git d"
alias gdc="git dc"
alias gf="git f"
alias gl="git l"
alias gp="git p"
alias gs="git s"

# Docker development
alias traefik="docker stop traefik && docker rm traefik; docker pull traefik && docker run --name traefik -d -p 8080:8080 -p 80:80 -v ~/.rs/traefik.toml:/etc/traefik/traefik.toml -v /var/run/docker.sock:/var/run/docker.sock traefik"

# Pipe my public/private keys to the clipboard.
alias pubkey="more ~/.ssh/id_ed25519.pub | pbcopy | echo '=> Public key copied to pasteboard.'"
alias prikey="more ~/.ssh/id_ed25519 | pbcopy | echo '=> Private key copied to pasteboard.'"
